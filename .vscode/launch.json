{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev: Vite + Chrome (Bun)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev",
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "Local:\\s*https?://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Chrome: http://localhost:5173",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "runtimeArgs": ["--remote-allow-origins=*"]
    }
  ]
}
